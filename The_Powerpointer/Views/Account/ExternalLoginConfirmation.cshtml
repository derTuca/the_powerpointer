@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>
<h3>Associate your @ViewData["LoginProvider"] account.</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" enctype="multipart/form-data" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="ui form">
    <h4>Association Form</h4>
    <hr/>
    <div asp-validation-summary="All" class="ui error message"></div>

    <p >
        You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
        Please enter an email address for this site below and click the Register button to finish
        logging in.
    </p>

    <div class="field">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
    </div>
    <div class="field">
        <label asp-for="Email"></label>
        <input asp-for="Email"/>
    </div>
    <button type="submit" class="ui button">Register</button>

    <div class="field" style="margin-top: 10px;">
        <label asp-for="ProfilePicture" class="ui button"></label>
        <input asp-for="ProfilePicture" type="file" style="display: none;"/>
    </div>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}