@model MainPageViewModel

<div class="ui vertically divided grid">
    <div class="one column row">
        <div class="column">
            <h1 class="mainh ui header" style="font-weight: 100; font-size: 10em; margin-top: 15px;">Hi Alex!</h1>
            <h1 class="mainh ui header" style="margin-top:-30px;">Here's your news for today.</h1>
        </div>
    </div>
    <h3 class="ui header">Paintings</h3>
    <div class="two column row">
        @foreach (var p in Model.Pictures)
        {
            <div class="column">
                <div class="ui fluid card">
                    <div class="image"><img src="@p.Source"/>
                    </div>
                    <div class="content">
                        <div class="header">@p.Name</div>
                        <div class="meta">@p.Author</div>
                    </div>
                </div>
            </div>
        }
                
              
    </div>
    <h3 class="ui header">Song</h3>
    <div class="one column row">
        <div class="column">
            <div class="ui fluid card">
                <div style="display: inline">
                    <i class="play icon" style="font-size: 2em; margin-top: 7px;"></i>
                    <span style="font-weight: bold">@Model.Song.Name</span>
                    <span style="margin-left: 2px; margin-right: 2px;">&bull;</span>
                    <span style="font-weight: lighter">@Model.Song.Author</span>
                </div>

                <div class="ui range" style="display: inline;" id="my-range"></div>
            </div>

        </div>
    </div>
    <h3 class="ui header">News</h3>
    <div class="four column row ui cards">
        @foreach (var n in Model.News)
        {
            <div class="column">
                <a class="ui card" href="#">
                    <div class="image">
                        <img src="@n.ImageSource"/>
                    </div>
                    <div class="content">
                        <div class="header">@n.Name</div>
                        <div class="meta">@n.DatePublished.ToString("d")</div>
                        <div class="description">
                            <p>@n.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
                
    </div>
</div>