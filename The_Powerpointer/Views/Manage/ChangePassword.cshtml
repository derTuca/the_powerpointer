@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="ui form">
    <h4>Change Password Form</h4>
    <hr />
    <div asp-validation-summary="All" class="ui error message"></div>
    <div class="field">
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword" ></span>
    </div>
    <div class="field">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div class="field">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" ></span>
    </div>
    <div class="field">
        <button type="submit" class="ui button">Change password</button>
    </div>
 
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
